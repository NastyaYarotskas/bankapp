pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = credentials('DOCKER_REGISTRY')
        GITHUB_USERNAME = credentials('GITHUB_USERNAME')
        KUBECONFIG = '/root/.kube/config'
    }

    stages {
        stage('Helm Deploy to Kafka Namespace') {
            steps {
                sh """
                kubectl apply -f kafka-deployment.yaml
                """
            }
        }
    }
}